{
  "kind": "collectionType",
  "collectionName": "bulletins",
  "info": {
    "name": "Bulletin",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "date": {
      "type": "datetime",
      "required": true
    },
    "location": {
      "type": "enumeration",
      "enum": [
        "sanctuary",
        "gathering"
      ],
      "default": "sanctuary",
      "required": true
    },
    "liturgical_calendar": {
      "type": "string",
      "required": true
    },
    "finances": {
      "type": "component",
      "repeatable": false,
      "component": "bulletin-components.finances"
    },
    "serving": {
      "type": "component",
      "repeatable": true,
      "component": "bulletin-components.serving"
    },
    "altar_flowers": {
      "type": "richtext"
    },
    "articles": {
      "type": "component",
      "repeatable": true,
      "component": "bulletin-components.articles"
    },
    "custom_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "bulletin_title": {
      "type": "string",
      "required": true,
      "default": "A Service of Word & Table"
    },
    "liturgy_order": {
      "type": "component",
      "repeatable": true,
      "component": "bulletin-components.liturgy-order"
    },
    "bulletin_id": {
      "type": "uid",
      "private": false,
      "targetField": "liturgical_calendar"
    }
  }
}
